{
  "flowName": "order-payment-flow",
  "initialData": {
    "userId": "user789",
    "productId": "premium-product-001",
    "quantity": 1,
    "amount": 299.99,
    "currency": "USD",
    "paymentMethod": "credit-card"
  }
}

